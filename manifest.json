{
  "manifest_version": 2,
  "name": "ContainerScript",
  "version": "1.0",
  "description": "User defined scripts for assining URLs to containers",
  "permissions": [
    "<all_urls>",
    "contextualIdentities",
    "cookies",
    "webRequestBlocking",
    "webRequest",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "ContainerScript"
  },
  "web_accessible_resources": [
    "ui.html"
  ]
}
